<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="500.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="piart.Controllers.ShowCommandeConroller">
   <children>
      <TableView fx:id="tvCommandes" layoutX="220.0" layoutY="77.0" onMouseClicked="#getDetailCommande" prefHeight="344.0" prefWidth="466.0">
        <columns>
          <TableColumn fx:id="colID" prefWidth="93.0" text="ID Commande" />
          <TableColumn fx:id="colDateCreer" prefWidth="161.0" text="Date Créer" />
            <TableColumn fx:id="colDateExpedirer" prefWidth="138.0" text="Date Expedirer" />
            <TableColumn fx:id="colStatus" prefWidth="73.0" text="Status" />
        </columns>
      </TableView>
      <Label layoutX="237.0" layoutY="20.0" text="Mes Commandes">
         <font>
            <Font name="Comic Sans MS" size="30.0" />
         </font>
      </Label>
      <Button fx:id="btnBack" layoutX="30.0" layoutY="29.0" mnemonicParsing="false" onAction="#goToMenu" text="Retourner" />
      <CheckBox fx:id="cbLivrer" layoutX="413.0" layoutY="459.0" mnemonicParsing="false" onAction="#LivrerOnly" text="Affiche Seulement les commandes Livrés" />
      <CheckBox fx:id="cbNonLivrer" layoutX="413.0" layoutY="432.0" mnemonicParsing="false" onAction="#NonLivrerOnly" text="Afficher Seuelement Les commandes non Livrés" />
      <DatePicker fx:id="dateDeb" layoutX="23.0" layoutY="129.0" />
      <DatePicker fx:id="DateFin" layoutX="23.0" layoutY="195.0" />
      <Label layoutX="23.0" layoutY="104.0" text="Date Début" />
      <Label layoutX="23.0" layoutY="171.0" text="Date Fin" />
      <Button fx:id="btnSearch" layoutX="28.0" layoutY="237.0" mnemonicParsing="false" onAction="#SearchByDate" text="Search" />
      <Button fx:id="btnExportPDF" layoutX="99.0" layoutY="237.0" mnemonicParsing="false" onAction="#ExporterPDF" text="Exporter en PDF" />
   </children>
</AnchorPane>
